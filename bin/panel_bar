#! /bin/sh

occupied="â– "
unoccupied="_"

color1="#b9b3a8"
color2="#9d534a"
bcolor="#f1f0eb"

menu=" oh "

while read -r line ; do
    case $line in
        C*)
            # conky yall
            conky="%{F$bcolor}${line#?}"
            ;;
        W*)
            # bspwm internal state
            wm_infos=""
            IFS=':'
            set -- ${line#?}
            while [ $# -gt 0 ] ; do
                item=$1
                name=${item#?}
                case $item in
                    O*)
                        # focused occupied desktop
                        wm_infos="$wm_infos%{F$color1}$occupied "
                        ;;
                    F*)
                        # focused free desktop
                        wm_infos="$wm_infos%{F$color1}$unoccupied "
                        ;;
                    U*)
                        # focused urgent desktop
                        wm_infos="$wm_infos%{F$bcolor}$occupied "
                        ;;
                    o*)
                        # occupied desktop
                        wm_infos="$wm_infos%{F$bcolor}$occupied "
                        ;;
                    f*)
                        # free desktop
                        wm_infos="$wm_infos%{F$bcolor}$unoccupied "
                        ;;
                    u*)
                        # urgent desktop
                        wm_infos="$wm_infos%{F$bcolor}$occupied "
                        ;;
                esac
                shift
            done
            ;;
        Q*)
            # custom menu
            menu="${line#?}"
            ;;
        N*)
            # notification center
            notification=" ${line#?}"
            ;;
    esac
    printf "%s\n" "%{l}%{B$color2} $wm_infos%{B-}%{B$bcolor} %{B-}%{B$color2}$menu%{B-}%{F$color2}$notification%{F-}%{r}%{B$color2} $conky%{A:lock:} %{A}%{B-}"
done
