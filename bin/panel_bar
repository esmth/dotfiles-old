#! /bin/sh

occupied="◼"
unoccupied="_"

#focuscolor="#909090"
#unfocuscolor="#9EB0C6"
#backcolor="#F3F3F3"
color1="#72859E"
color2="#9EB0C6"
bcolor="#F3F3F3"

#menu="▢"

while read -r line ; do
    case $line in
        C*)
            # conky yall
            conky="%{F$bcolor}${line#?}"
            ;;
        W*)
            # bspwm internal state
            wm_infos=""
            IFS=':'
            set -- ${line#?}
            while [ $# -gt 0 ] ; do
                item=$1
                name=${item#?}
                case $item in
                    O*)
                        # focused occupied desktop
                        wm_infos="%{A:}$wm_infos %{F$color1}$occupied${name}"
                        ;;
                    F*)
                        # focused free desktop
                        wm_infos="$wm_infos %{F$color1}$unoccupied${name}"
                        ;;
                    U*)
                        # focused urgent desktop
                        wm_infos="$wm_infos %{F$color1}$occupied${name}"
                        ;;
                    o*)
                        # occupied desktop
                        wm_infos="$wm_infos %{F$bcolor}$occupied${name}"
                        ;;
                    f*)
                        # free desktop
                        wm_infos="$wm_infos %{F$bcolor}$unoccupied${name}"
                        ;;
                    u*)
                        # urgent desktop
                        wm_infos="$wm_infos %{F$bcolor}$occupied${name}"
                        ;;
                esac
                shift
            done
            ;;
        Q*)
            # custom menu
            menu="${line#?}"
            ;;
        N*)
            # notification center
            notification="${line#?}"
            ;;
    esac
    printf "%s\n" "%{l}%{B$color2}$wm_infos %{B-}%{B$bcolor} %{B-}%{A:main_menu:}$menu%{A}$notification%{r}%{B$color2} $conky%{A:lock:} %{A}%{B-}"
done
